modules = ["web", "python-3.11", "nodejs-20"]

[nix]
channel = "stable-25_05"
packages = ["ffmpeg", "freetype", "glibcLocales", "gumbo", "harfbuzz", "jbig2dec", "lcms2", "libev", "libimagequant", "libjpeg", "libjpeg_turbo", "libtiff", "libwebp", "libxcrypt", "mupdf", "openjpeg", "openssl", "postgresql", "swig", "tcl", "tk", "xcbuild", "zlib"]

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "--bind", "0.0.0.0:5000", "main:app"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --bind 0.0.0.0:5000 --reuse-port --reload main:app"
waitForPort = 5000

[agent]
integrations = ["python_database:1.0.0"]
expertMode = true

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 41055
externalPort = 3000

[[ports]]
localPort = 46599
externalPort = 3003

[userenv]

[userenv.shared]
SUPERADMIN_EMAIL = "admin@example.com"
SUPERADMIN_PASSWORD = "changeme123"
